<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/white_round_background"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        app:roundAsCircle="true" />

    <LinearLayout
        android:id="@+id/name_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="12.5dp"
        android:layout_toRightOf="@+id/user_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/textColor_mainTitle"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_fire"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_fire" />

            <TextView
                android:id="@+id/tv_hotCount"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#FF0050"
                android:textSize="11sp" />
        </LinearLayout>
        <View android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spring"/>

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_icon"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/user_icon"
            android:layout_toRightOf="@+id/user_icon"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_instruction"
            android:textSize="11sp" />
    </LinearLayout>



    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColor_secondTitle"
        android:textSize="13sp" />

    <FrameLayout
        android:id="@+id/cover_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/foreground_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_transparent" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_play" />
    </FrameLayout>

    <com.meeruu.sharegoods.rn.showground.widgets.RnRecyclerView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_wrapper"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />


    <ImageView
        android:id="@+id/icon_hand"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/product_list"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:padding="2dp"
        android:src="@drawable/icon_hand_gray" />

    <TextView
        android:id="@+id/like_num"
        android:layout_width="45dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/icon_hand"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_hand"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/textColor_mainTitle"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/icon_collection"
        android:layout_width="26dp"
        android:layout_height="28dp"
        android:layout_below="@id/product_list"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/like_num"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:src="@drawable/icon_collection_gray" />

    <TextView
        android:id="@+id/collection_num"
        android:layout_width="45dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/icon_collection"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_collection"
        android:gravity="center_vertical"
        android:textColor="@color/textColor_mainTitle"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/icon_download"
        android:layout_width="26dp"
        android:layout_height="28dp"
        android:layout_below="@id/product_list"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/collection_num"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:src="@drawable/icon_download_gray" />

    <TextView
        android:id="@+id/download_num"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/icon_download"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_download"
        android:gravity="center_vertical"
        android:textColor="@color/textColor_mainTitle"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/icon_share"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/product_list"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/show_release_icon" />

    <ImageView
        android:id="@+id/iv_recommend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/show_recommend" />

</RelativeLayout>