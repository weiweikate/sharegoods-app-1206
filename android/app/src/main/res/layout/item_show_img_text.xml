<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/white_round_background"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/user_icon"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:textColor="@color/textColor_mainTitle"
        android:textSize="13sp"
        android:layout_marginTop="12dp"/>

    <ImageView android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_fire"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/user_name"
        android:id="@+id/iv_fire"/>
    <TextView android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:id="@+id/tv_hotCount"
        android:textSize="11sp"
        android:layout_marginTop="12dp"
        android:textColor="#FF0050"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/iv_fire"/>
    <TextView
        android:id="@+id/publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_icon"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/user_icon"
        android:layout_toRightOf="@+id/user_icon"
        android:includeFontPadding="false"
        android:layout_marginBottom="-4dp"
        android:textColor="@color/textColor_instruction"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_icon"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_show_image_text"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/icon_hand"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:padding="2dp"
        android:src="@drawable/icon_hand_gray" />

    <TextView
        android:id="@+id/like_num"
        android:layout_width="45dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/icon_hand"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_hand"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textColor="@color/textColor_mainTitle"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/icon_collection"
        android:layout_width="26dp"
        android:layout_height="28dp"
        android:layout_below="@id/content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/like_num"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:src="@drawable/icon_collection_gray" />

    <TextView
        android:id="@+id/collection_num"
        android:layout_width="45dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/icon_collection"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_collection"
        android:gravity="center_vertical"
        android:textColor="@color/textColor_mainTitle"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/icon_share"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/show_release_icon" />

</RelativeLayout>