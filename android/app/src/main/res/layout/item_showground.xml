<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/showground_item_background">

    <FrameLayout  android:id="@+id/cover_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/showground_item_image"/>
        <ImageView android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:id="@+id/icon_play"
            android:src="@drawable/icon_play"/>
    </FrameLayout>
    
    <TextView
        android:id="@+id/showground_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_wrapper"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:textColor="#333333"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showground_item_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center|end"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/showground_item_userIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/showground_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/icon_fire" />

        <TextView
            android:id="@+id/showground_item_rqz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:includeFontPadding="false"
            android:textColor="#999999"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>