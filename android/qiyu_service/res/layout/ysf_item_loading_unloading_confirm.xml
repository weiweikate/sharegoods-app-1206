<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <FrameLayout
        android:id="@+id/ysf_fl_Photo"
        android:layout_width="81dp"
        android:layout_height="81dp">
        <ImageView
            android:id="@+id/ysf_iv_Photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/ysf_leave_msg_select_photo_default_back" />
        <ImageView
            android:id="@+id/ysf_iv_leave_msg_video_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription=""
            android:focusable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/ysf_leave_msg_add_back"/>
        <TextView
            android:id="@+id/ysf_tv_leave_msg_item_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:textColor="@color/ysf_grey_666666"
            android:text="@string/ysf_bot_form_upload_image"/>
        <ImageView
            android:id="@+id/ysf_iv_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ysf_photograph_close"
            android:layout_gravity="top|right"/>
    </FrameLayout>
</LinearLayout>
