<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ysf_message_item_evaluation_invitation_layout"
        android:layout_width="@dimen/ysf_bubble_content_max_width"
        android:layout_height="wrap_content"
        android:background="@color/ysf_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/ysf_message_item_evaluation_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left"
            android:text="@string/ysf_evaluation_message_item_text"
            android:textColor="@color/ysf_black_333333"
            android:textSize="@dimen/ysf_text_size_16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/ysf_grey_ededed"></View>

        <Button
            android:id="@+id/ysf_btn_message_item_evaluation"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ysf_evaluation_button_corners_2_bg"
            android:gravity="center"
            android:text="@string/ysf_evaluation_message_item_btn"
            android:textColor="@color/ysf_white"
            android:textSize="@dimen/ysf_text_size_16"/>
    </LinearLayout>

    <include
        android:id="@+id/ysf_message_item_evaluation_thanks"
        layout="@layout/ysf_message_item_notification"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ysf_message_item_multi_evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ysf_message_notification_bg"
        android:gravity="center"
        android:maxWidth="@dimen/ysf_bubble_content_max_width"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="修改评价"
        android:textColor="@color/ysf_notification_text"
        android:textSize="@dimen/ysf_text_size_14"/>
</merge>