<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ysf_white">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ysf_ic_leave_msg_success" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ysf_grey_666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="232dp"
        android:text="@string/ysf_leave_msg_success_str"/>
    <Button
        android:id="@+id/ysf_btn_leave_msg_success_close"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:background="@drawable/ysf_leave_msg_item_back"
        android:textColor="@color/ysf_black_333333"
        android:textSize="14sp"
        android:layout_marginTop="286dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/ysf_close"/>
</FrameLayout>